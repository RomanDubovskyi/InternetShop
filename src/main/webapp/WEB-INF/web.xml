    <servlet-mapping>
        <servlet-name>addItem</servlet-name>
        <url-pattern>/servlet/addItem</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getBucket</servlet-name>
        <servlet-class>mate.academy.internetshop.controller.GetBucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getBucket</servlet-name>
        <url-pattern>/servlet/getBucket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteItemFromBucket</servlet-name>
        <servlet-class>mate.academy.internetshop.controller.DeleteItemFromBucketController</servlet-class>
    </servlet>
